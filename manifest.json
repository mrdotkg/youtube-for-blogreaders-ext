{
  "manifest_version": 3,
  "version": "3.1.0",
  "name": "YouTube for Blog Readers",
  "description": "Transform YouTube into a text-focused, blog-like reading experience - hide thumbnails, show video duration and watch progress, block specific channels, perfect for mindful content discovery",
  "homepage_url": "https://github.com/mrdotkg/youtube-blog-readers-ext",
  "browser_specific_settings": {
    "gecko": {
      "id": "{17c4514d-71fa-4633-8c07-1fe0b354c885}"
    },
    "gecko_android": {}
  },
  "icons": {
    "48": "img/icon48.png",
    "144": "img/icon144.png",
    "512": "img/icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "common.js",
        "inject.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_title": "YouTube for Blog Readers"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
